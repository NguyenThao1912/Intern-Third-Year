<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F3F3F3"
            >
            <RelativeLayout
                android:paddingHorizontal="4dp"
                android:paddingVertical="8dp"
                android:layout_width="match_parent"
                android:layout_height="58dp">
                <ImageButton
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_black_36dp"
                    android:background="?actionBarItemBackground"
                    android:id="@+id/bt_back"/>
                <ImageButton
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_notes_36"
                    android:background="?actionBarItemBackground"
                    android:layout_alignParentRight="true"
                    android:id="@+id/bt_note"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_toRightOf="@id/bt_back"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text="Đề số 18"
                    android:textColor="@color/black"
                    android:gravity="center|left"
                    android:paddingLeft="6dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:id="@+id/tv_title"
                    />

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/tv_title"
                    android:ellipsize="marquee"
                    android:gravity="center|left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:text="(19:00)"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt_done"
                    android:layout_marginHorizontal="26dp"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#81DA85"
                    android:text="KẾT THÚC"
                    android:textSize="18dp"
                    android:layout_toLeftOf="@id/bt_note"
                    android:layout_toRightOf="@id/tv_time"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?actionBarItemBackground"
                            android:src="@drawable/arrow_back_ios_green_600_24dp"
                            android:id="@+id/bt_backQues"/>
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?actionBarItemBackground"
                            android:src="@drawable/arrow_forward_ios_green_600_24dp"
                            android:layout_alignParentRight="true"
                            android:id="@+id/bt_nextQues"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="18dp"
                            android:text="Câu 6/18"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_toRightOf="@id/bt_backQues"
                            android:layout_toLeftOf="@id/bt_nextQues"
                            android:textSize="16dp"
                            android:id="@+id/tv_numQues"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#66BB6A"
                        android:layout_marginVertical="8dp"/>
                    <TextView
                        android:layout_marginVertical="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thứ tự các xe đi "
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:id="@+id/tv_Ques"/>
                    <ImageView
                        android:layout_marginVertical="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_Ques"
                        android:background="?actionBarItemBackground"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:id="@+id/ll_option1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">
                            <androidx.cardview.widget.CardView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="100dp">
                                <ImageView
                                    android:id="@+id/iv_circleOption1"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:background="@color/white"
                                    android:src="@drawable/custom_circle"/>
                                <TextView
                                    android:id="@+id/tv_numOption1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textSize="16dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/tv_Option1"
                                android:layout_marginLeft="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="là một phần......"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_option2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">
                            <androidx.cardview.widget.CardView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="100dp">
                                <ImageView
                                    android:id="@+id/iv_circleOption2"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:background="@color/white"
                                    android:src="@drawable/custom_circle"/>
                                <TextView
                                    android:id="@+id/tv_numOption2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:textSize="16dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/tv_Option2"
                                android:layout_marginLeft="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="là một phần......"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_option3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">
                            <androidx.cardview.widget.CardView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="100dp">
                                <ImageView
                                    android:id="@+id/iv_circleOption3"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:background="@color/white"
                                    android:src="@drawable/custom_circle"/>
                                <TextView
                                    android:id="@+id/tv_numOption3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:textSize="16dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/tv_Option3"
                                android:layout_marginLeft="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="là một phần......"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_option4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">
                            <androidx.cardview.widget.CardView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="100dp">
                                <ImageView
                                    android:id="@+id/iv_circleOption4"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:background="@color/white"
                                    android:src="@drawable/custom_circle"/>
                                <TextView
                                    android:id="@+id/tv_numOption4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4"
                                    android:textSize="16dp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/tv_Option4"
                                android:layout_marginLeft="12dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="là một phần......"
                                android:textColor="@color/black"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginVertical="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/ll_ques">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?actionBarItemBackground"
                                android:src="@drawable/baseline_message_green_600_18dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GIẢI THÍCH ĐÁP ÁN"
                                android:layout_marginLeft="22dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:layout_marginVertical="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#C0EAC1">
                            <TextView
                                android:padding="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="vì......"
                                android:textColor="@color/black"
                                android:id="@+id/tv_Answers"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="98dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#4C4C4C"
            android:alpha="0.4"
            android:id="@+id/card_menuQues"
            android:layout_alignParentRight="true">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rc_menuQues"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>
